<authorization>
  <view class="profile">
    <van-cell center title="头像">
      <van-icon
        slot="right-icon"
        name="arrow"
        size="16"
        color="#c3c3c5"
      />
      <button
        class="button"
        size="mini"
        hover-class="none"
        open-type="chooseAvatar"
        bindchooseavatar="onAvatar"
      >
        <image class="avatar" src="{{imgUrl}}"></image>
      </button>
    </van-cell>
    <van-field
      center
      label="昵称"
      input-align="right"
      type="nickname"
      bindblur="onBlur"
      value="{{nickName}}"
      placeholder="请输入昵称"
    />
  </view>
</authorization>
